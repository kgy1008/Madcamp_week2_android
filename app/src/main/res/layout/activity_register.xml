<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Register">

    <TextView
        android:id="@+id/register"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="66dp"
        android:gravity="top"
        android:text="회원가입"
        android:textSize="20sp"
        android:fontFamily="@font/registerfont"
        android:textAppearance="@style/register_page"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/id"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="130dp"
        android:gravity="top"
        android:text="ID"
        android:fontFamily="@font/registerfont"
        android:textAppearance="@style/register_page" />

    <EditText
        android:id="@+id/input_id"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/registerfont"
        android:background="@drawable/rectangle_1" />

    <TextView
        android:id="@+id/password"
        android:layout_width="168dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="240dp"
        android:gravity="top"
        android:text="PASSWORD"
        android:fontFamily="@font/registerfont"
        android:textAppearance="@style/register_page" />

    <EditText
        android:id="@+id/input_password"
        style="@style/register_page"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/rectangle_1"
        android:hint="영문, 숫자 조합 8~16자"
        android:fontFamily="@font/registerfont"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/password_confirm"
        android:layout_width="168dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="350dp"
        android:gravity="top"
        android:text="PASSWORD CONFIRM"
        android:fontFamily="@font/registerfont"
        android:textAppearance="@style/register_page" />

    <EditText
        android:id="@+id/input_password_confirm"
        style="@style/register_page"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/rectangle_1"
        android:hint="비밀번호를 한번 더 입력해주세요"
        android:fontFamily="@font/registerfont"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/Class"
        android:layout_width="168dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="460dp"
        android:gravity="top"
        android:text="분반"
        android:fontFamily="@font/registerfont"
        android:textAppearance="@style/register_page" />

    <EditText
        android:id="@+id/input_class"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="490dp"
        android:fontFamily="@font/registerfont"
        android:background="@drawable/rectangle_1" />

    <TextView
        android:id="@+id/certification"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="570dp"
        android:gravity="top"
        android:text="본인인증"
        android:fontFamily="@font/registerfont"
        android:textAppearance="@style/register_page" />

    <View
        android:id="@+id/input_certification"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="600dp"
        android:fontFamily="@font/registerfont"
        android:background="@drawable/rectangle_1" />

    <TextView
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="650dp"
        android:text="submit"
        android:gravity="center"
        android:background="@drawable/rectangle_1"/>

</RelativeLayout>